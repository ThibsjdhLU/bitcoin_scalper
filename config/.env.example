# Configuration du bot Bitcoin Scalper
# Copier ce fichier en .env et remplir avec vos valeurs

# API MT5 REST
MT5_REST_URL=http://localhost:8000
MT5_REST_API_KEY=your_api_key_here

# Paramètres de risque (en %)
DEFAULT_SL_PCT=0.01
DEFAULT_TP_PCT=0.02

# Multiplicateurs ATR pour SL/TP dynamiques
SL_ATR_MULT=2.0
TP_ATR_MULT=3.0

# TimescaleDB (optionnel)
TSDB_HOST=localhost
TSDB_PORT=5432
TSDB_NAME=trading_db
TSDB_USER=postgres
TSDB_PASSWORD=your_password
TSDB_SSLMODE=require

# Chemin du modèle ML
ML_MODEL_PATH=models/model

# Algorithme d'exécution (market, iceberg, vwap, twap)
EXEC_ALGO=market

# Backtest activé
ENABLE_BACKTEST=false
