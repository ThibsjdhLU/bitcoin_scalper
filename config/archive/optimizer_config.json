{
    "optimization": {
        "grid_search": {
            "enabled": true,
            "param_grid": {
                "ema_crossover": {
                    "fast_period": [5, 9, 12, 15],
                    "slow_period": [20, 26, 30, 35],
                    "min_crossover_strength": [0.0001, 0.0005, 0.001]
                },
                "rsi": {
                    "rsi_period": [9, 14, 21],
